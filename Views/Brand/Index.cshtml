@model List<Brand> ///importing the brand list for using in the c sharp code @itme. ....

<div class="container">
    <div class="row ab-4">
        <div class="col-md-6 text-uppercase">
            <h2>Brand List</h2>
        </div>
        <div class="col-md-10 text">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Create</a>
        </div>
    </div>
    <hr />
    @if(Model.Count()>0)
    {
    <table id="table" class="table table-bordered tablle-striped">
        <thead>
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Established Year</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td width="40%"> @item.Name</td>
                    <td width ="40%">@item.EstablishedYear</td>
                        <td class="d-flex align-items-center justify-content-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Brand" asp-action="Details" asp-route-id="@item.Id"
                                class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                <i class="bi bi-info-circle-fill"></i></a>

                                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@item.Id"
                                class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a asp-controller="Brand" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="bi bi-trash3-fill"></i>
                                </a>

                            </div>
                        </td>
                </tr>
            }
        </tbody>
        </table>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">No records to show</h2>
                </div>
            </div>
        </div>

    }
</div>

@section Scripts
{
    <script>
        $('.table').DataTable();
    </script>
}